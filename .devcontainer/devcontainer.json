{
    "name": "ROS2 Humble Base Dev Container",
    "dockerComposeFile": "./docker-compose.yaml", // docker-compose.yml 위치 (보통 프로젝트 루트)
    "service": "autonomous_navigation", // Service name in docker-compose.yml
    "workspaceFolder": "/root/autonomous_navigation_ws", // 컨테이너 내 작업 공간 위치 (docker-compose.yml에서 마운트한 경로)
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-iot.vscode-ros"
    ],
    "remoteUser": "root",
    "forwardPorts": [
        11311
    ]
}